<%=form_with model: category, local: true do |form|%>
    <%if category.errors.any? %>
      <ul>
        <% category.errors.full_messages.each do |error|%>
        <li> <%=error%> </li>
        <% end %>
      </ul>
    <%end%>
    <div class="overline-bs regular px-1 py-4"> <%= form.label :name%> </div>
    <div class="input-container shadow-xs px-1"> <%= form.text_field :name, class: "input" %> </div>
    <div class="overline-bs regular px-1 py-4"> <%= form.label :description%> </div>
    <div class="input-container shadow-xs px-1"> <%= form.text_area :description, class: "input"%> </div>
    <div class="overline-bs regular px-1 py-4"> <%= form.label :cover%> </div>
    <div class="px-1"> <%= form.file_field :cover%>
    <%= image_tag(category.cover) if category.cover.attached?%>
    <div class="buttons_edit_category py-1 flex flex-column px-1 botton-flex">
      <%= form.submit 'Save category', class: "button button--default button--sm bg-gray text-white overline-bs" %>
      <%= link_to "Back", categories_path, class: "btn_back_category button button--default button--sm text-decoration-none"%>
  </div>
  <%end%>