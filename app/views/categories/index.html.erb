<h1 class="head-bs semibold py-1 ft-Mont ml-1">Categories</h1>
</div>
<button class="button button--default button--sm bg-secondary-300 weight-500 ml-1 my-0.5">
  <%=link_to "NEW CATEGORY", new_category_path, class: "btn_new_category text-decoration-none text-white weight-500 "%>
  </button>
</div>
<% @categories.each do |category|%>
  
  <div class="cards-list py-1 px-1 size-category">
    <div class="card shadow-lg">
      <div class="card__header">
        <% if category.cover.attached? %>
          <%= image_tag category.cover, class: "img-fit" %> 
        <%end%>
        <div class="head-sm semibold ft-Mont px-1 pt-0.8"> <%= category.name %> </div>
        <p class="content-sm regular color-gray-400 px-1"><%= category.photos.size%> photos</p>
        <p class="content-bs regular px-1"><%= category.description%> photos</p>
        <div class="flex aling-righ">
        <%= link_to "", category_path(category), class: "button-circular svg-show" %>
        <%= link_to "", edit_category_path(category), class: "button-circular svg-edit" %>
        <%= link_to "", category_path(category), class: "button-circular svg-trash", data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }%>
          </div>
      </div>
    </div>
  </div>
<% end %>
