<div class="header_categories">
  <div class="header_categories-titles">
  <h1>Search Resutls</h1>
<br/><br/>

<p>Search term: <%= @query %></p>
<p><%= @categories.size %> categories found</p>
<br/><br/>

</div>
<% @photos.each do |photo|%>
  <div> <%= image_tag photo.cover %> </div>
  <div>
    <%= photo.title%>
    
    <%= link_to "show", photo_path(photo) %>
    <%= link_to "edit", edit_photo_path(photo) %>
    <%= link_to "destroy", photo_path(photo), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }%>
  </div>
<% end %>
<p>COMMENTS</p>
<% @comments.each do |comment|%>
  <div>
    <%= comment.body%><br/>
    <p>Send <%= (((comment.created_at - DateTime.now)*-1)/60/60/24).round() %> days ago</p>
    <%= link_to "destroy", comment_path(comment), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }%>
  </div>
<% end %>